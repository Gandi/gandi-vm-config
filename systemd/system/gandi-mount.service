[Unit]
Description=Gandi-mount mounts the virtual disks with udev at boot
DefaultDependencies=true
ConditionPathIsReadWrite=/
After=local-fs.target remote-fs.target

[Service]
Type=simple
RemainAfterExit=no
ExecStart=/etc/init.d/gandi-mount start

